<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Reset"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_crosses_points"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/txt_color"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/simbolo_turno"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iosicon"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/cross"
                    app:tint="@color/txt_color"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/nought"
                    app:tint="@color/txt_color"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_noughts_points"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/txt_color"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cellsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10pt">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@id/ImageButton00"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton10"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton20"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@id/ImageButton01"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton11"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton21"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@id/ImageButton02"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton12"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />

            <ImageButton
                android:id="@id/ImageButton22"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="3pt"
                android:background="@drawable/iosicon"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:padding="0pt"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>